extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Pessoa Record: #{s.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            if s.id
                li #[b Id:] #{s.id}
            if s.nome
                li #[b Nome:] #{s.nome}
            if s.idade
                li #[b Idade:] #{s.idade}
            if s.sexo
                li #[b Sexo:] #{s.sexo}
            if s.BI
                li #[b BI:] #{s.BI}
            if s.CC
                li #[b CC:] #{s.CC}
            if s.descrição
                li #[b Descrição:] #{s.descrição}
                
        button.w3-btn.w3-round.w3-margin.w3-green
            a(href="/pessoas/delete/" + s.id + "/confirm") Confirm 
        button.w3-btn.w3-round.w3-margin.w3-red
            a(href="/") Cancel
                
    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]