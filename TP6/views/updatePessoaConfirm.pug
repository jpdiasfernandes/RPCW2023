extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Pessoa Record: #{s.id} Updated
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            if s.id
                li #[b Id:] #{s.id}
            if s.nome
                li #[b Nome:] #{s.nome}
            if s.idade
                li #[b Idade:] #{s.idade}
            if s.sexo
                li #[b Sexo:] #{s.sexo}
            if s.BI
                li #[b BI:] #{s.BI}
            if s.CC
                li #[b CC:] #{s.CC}
            if s.descrição
                li #[b Descrição:] #{s.descrição}
            if s.morada
                if s.morada.cidade
                    li #[b Cidade onde mora:] #{s.morada.cidade}
                if s.morada.distrito
                    li #[b Distrito onde mora:] #{s.morada.distrito}
            if s.profissao
                li #[b Profissão:] #{s.profissao}
            if s.partido_politico
                if s.partido_politico.party_abbr
                    li #[b Abreviatura Partido Político:] #{s.partido_politico.party_abbr}
                if s.partido_politico.party_name
                    li #[b Nome Partido Político:] #{s.partido_politico.party_name}
            if s.religiao
                li #[b Religião:] #{s.religiao}
            if s.marca_carro
                li #[b Marca Carro:] #{s.marca_carro}

        if s.desportos
            p= "Desportos"
            ul.w3-ul.w3-card-4
                each desp in s.desportos
                    li=desp
                    
        if s.animais
            p= "Animais"
            ul.w3-ul.w3-card-4
                each animal in s.animais
                    li=animal
        if s.figura_publica_pt
            p= "Figuras públicas portuguesas"
            ul.w3-ul.w3-card-4
                each figura in s.figura_publica_pt
                    li=figura
                    
        if s.destinos_favoritos
            p= "Destinos favoritos"
            ul.w3-ul.w3-card-4
                each destino in s.destinos_favoritos
                    li=destino

        if s.atributos
            p= "Características da pessoa"
            ul.w3-ul.w3-card-4
                if s.atributos.fumador
                    li="Fumador: " + s.atributos.fumador
                if s.atributos.gosta_cinema
                    li="Gosta de cinema: " + s.atributos.gosta_cinema
                if s.atributos.gosta_viajar 
                    li="Gosta de viajar: " + s.atributos.gosta_viajar
                if s.atributos.acorda_cedo             
                    li="Acorda cedo: " + s.atributos.acorda_cedo
                if s.atributos.gosta_ler             
                    li="Gosta de ler" + s.atributos.gosta_ler
                if s.atributos.gosta_musica             
                    li="Gosta de música: " + s.atributos.gosta_musica
                if s.atributos.gosta_comer             
                    li="Gosta de comer: " + s.atributos.gosta_comer
                if s.atributos.gosta_animais_estimacao             
                    li="Gosta de animais de estimação: " + s.atributos.gosta_animais_estimacao
                if s.atributos.gosta_dancar             
                    li="Gosta de dançar: " + s.atributos.gosta_dancar
                if s.atributos.comida_favorita             
                    li="Comida favorita: " + s.atributos.comida_favorita

    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]