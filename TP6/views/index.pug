extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Pessoas List #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Name
          th Idade
          th Sexo
          th Cidade
        
        each s in slist
          tr
            td= s.id
            if s.nome
              td
                a(href="/pessoas/"+s.id)= s.nome
            else 
              td="-"
            if s.idade
              td=s.idade
            else
              td="-"
            if s.morada && s.morada.cidade
              td= s.morada.cidade
            else
              td="-" 
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoas/edit/"+s.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoas/delete/"+s.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}